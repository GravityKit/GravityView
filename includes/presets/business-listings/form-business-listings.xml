<?xml version="1.0" encoding="UTF-8"?>
<forms version="1.8.7">
	<form labelPlacement="top_label" useCurrentUserAsAuthor="1">
			<title><![CDATA[GravityView - Business Listing]]></title>
			<descriptionPlacement><![CDATA[below]]></descriptionPlacement>
			<button type="text">
				<text><![CDATA[Submit]]></text>
			</button>
			<fields>
				<field id="4" size="medium" type="text">
					<label><![CDATA[Business Name]]></label>
				</field>
				<field id="14" type="text" size="large">
					<label><![CDATA[Business Summary]]></label>
					<salesforceMapType><![CDATA[live]]></salesforceMapType>
					<maxLength><![CDATA[255]]></maxLength>
				</field>
				<field id="12" size="medium" type="textarea">
					<label><![CDATA[Business Description]]></label>
				</field>
				<field id="2" size="medium" type="address" addressType="international">
					<label><![CDATA[Address]]></label>
					<inputs>
						<input id="2.1">
							<label><![CDATA[Street Address]]></label>
						</input>
						<input id="2.2">
							<label><![CDATA[Address Line 2]]></label>
						</input>
						<input id="2.3">
							<label><![CDATA[City]]></label>
						</input>
						<input id="2.4">
							<label><![CDATA[State / Province]]></label>
						</input>
						<input id="2.5">
							<label><![CDATA[ZIP / Postal Code]]></label>
						</input>
						<input id="2.6">
							<label><![CDATA[Country]]></label>
						</input>
					</inputs>
				</field>
				<field id="5" size="medium" type="phone" phoneFormat="standard">
					<label><![CDATA[Main business phone]]></label>
				</field>
				<field id="11" size="medium" type="email">
					<label><![CDATA[Business Email]]></label>
				</field>
				<field id="1" size="medium" type="website">
					<label><![CDATA[Web Address]]></label>
				</field>
				<field id="8" size="medium" type="fileupload">
					<label><![CDATA[Featured Image]]></label>
					<allowedExtensions><![CDATA[jpg, gif, png, jpeg]]></allowedExtensions>
				</field>
				<field id="9" size="medium" type="fileupload">
					<label><![CDATA[Image Gallery]]></label>
					<allowedExtensions><![CDATA[jpg, gif, png, jpeg]]></allowedExtensions>
					<multipleFiles><![CDATA[1]]></multipleFiles>
				</field>
				<field id="6" size="medium" type="section" displayOnly="1">
					<description><![CDATA[This information will not be shown on the website.]]></description>
					<label><![CDATA[Submitter Contact Information]]></label>
				</field>
				<field id="7" size="medium" type="name">
					<label><![CDATA[Name]]></label>
					<inputs>
						<input id="7.3">
							<label><![CDATA[First]]></label>
						</input>
						<input id="7.6">
							<label><![CDATA[Last]]></label>
						</input>
					</inputs>
				</field>
				<field id="3" size="medium" type="email">
					<label><![CDATA[Email]]></label>
				</field>
				<field adminOnly="1" id="10" size="medium" type="checkbox">
					<adminLabel><![CDATA[Approved?]]></adminLabel>
					<label><![CDATA[Approved? (Admin-only)]]></label>
					<choices>
						<choice>
							<text><![CDATA[Approved]]></text>
						</choice>
					</choices>
				</field>
			</fields>
			<notifications>
				<notification id="534da0131ca72">
					<to><![CDATA[{admin_email}]]></to>
					<name><![CDATA[Admin Notification]]></name>
					<event><![CDATA[form_submission]]></event>
					<toType><![CDATA[email]]></toType>
					<subject><![CDATA[New submission from {form_title}]]></subject>
					<message><![CDATA[{all_fields}]]></message>
				</notification>
			</notifications>
			<confirmations>
				<confirmation id="534da0131cd45" isDefault="1" type="message">
					<name><![CDATA[Default Confirmation]]></name>
					<message><![CDATA[Thanks for contacting us! We will get in touch with you shortly.]]></message>
				</confirmation>
			</confirmations>
		</form>
</forms>
